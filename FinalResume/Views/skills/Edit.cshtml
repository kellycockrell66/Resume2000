@model FinalResume.Models.skills

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>skills</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="skillName" class="control-label"></label>
                <input asp-for="skillName" class="form-control" />
                <span asp-validation-for="skillName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="experienceLevel" class="control-label"></label>
                <input asp-for="experienceLevel" class="form-control" />
                <span asp-validation-for="experienceLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="yearsUsed" class="control-label"></label>
                <input asp-for="yearsUsed" class="form-control" />
                <span asp-validation-for="yearsUsed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="applicantID" class="control-label"></label>
                <select asp-for="applicantID" class="form-control" asp-items="ViewBag.applicantID">
                    <option value=""> -- Select Applicant Name  --</option>
                </select>

            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
