@*Education:  Use a foreach loop for the many education entries.*@

<div>
    <div class="item active">
        <h3>Education</h3>
    </div>
    @foreach (var item in Model.education)
    {


        <dl class="dl-horizontal">
            @*<dt>
                    @Html.DisplayNameFor(model => item.institution)
                </dt>*@
            <dd>
                @Html.DisplayFor(model => item.institution)
            </dd>
            @*<dt>
                    @Html.DisplayNameFor(model => item.degreeType)
                </dt>*@
            <dd>
                @Html.DisplayFor(model => item.degreeType)
                @Html.DisplayFor(model => item.subject)
            </dd>
            @*<dt>
                    @Html.DisplayNameFor(model => item.subject)
                </dt>*@


            @*<dt>
                    @Html.DisplayNameFor(model => item.city)
                </dt>*@
            <dd>
                @Html.DisplayFor(model => item.city)
                @Html.DisplayFor(model => item.state)
            </dd>
            @*<dt>
                    @Html.DisplayNameFor(model => item.state)
                </dt>*@
            @*<dd>
                    @Html.DisplayNameFor(model => item.gradDate)
                </dd>*@
            <dd>
                @Html.DisplayFor(model => item.gradDate)
            </dd>


        </dl>

    }
</div>

